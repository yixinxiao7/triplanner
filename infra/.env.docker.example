# Docker Compose environment variables for TripPlanner
# Copy this file to .env.docker and update with real values before deploying.
#
# Usage: docker compose -f infra/docker-compose.yml --env-file infra/.env.docker up --build

# Database
DB_USER=user
DB_PASSWORD=change-me-to-a-strong-password
DB_NAME=appdb
# DB_PORT is no longer mapped to host â€” DB is only accessible from internal Docker network
# To expose for local debugging, create a docker-compose.override.yml with ports mapping

# Backend
JWT_SECRET=change-me-to-a-64-character-random-hex-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost
COOKIE_SECURE=true

# Frontend
FRONTEND_PORT=80
VITE_API_URL=/api/v1
